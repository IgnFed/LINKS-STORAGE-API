{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["es2018", "es2019", "es2020", "ES2021"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "strict": true,
    "skipLibCheck": true,
    "charset": "utf-8",
    "esModuleInterop": true,
    "outDir": "./out",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "isolatedModules": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "src/**/*"
  ],
  "typeAcquisition": {
    "include": [
      "jest"
    ]
  }
}